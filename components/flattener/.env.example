# ========================================
# Excel Flattener Configuration
# ========================================
#
# Copy this file to .env and adjust values as needed.
# All settings have sensible defaults.

# ----------------------------------------
# Output Settings
# ----------------------------------------

# Directory where flattened outputs will be created
# Default: ./flats
FLATTENER_OUTPUT_DIR=./flats

# Directory for log files (leave empty to use system temp directory)
# Default: (empty - uses system temp)
FLATTENER_LOG_DIR=

# Logging verbosity level: DEBUG, INFO, WARNING, ERROR
# Default: INFO
FLATTENER_LOG_LEVEL=INFO

# ----------------------------------------
# Extraction Options
# ----------------------------------------

# Extract computed cell values (formula results)?
# Default: false
FLATTENER_INCLUDE_COMPUTED=false

# ----------------------------------------
# Limits & Timeouts
# ----------------------------------------

# Maximum time (in seconds) allowed for extracting one file
# Default: 900 (15 minutes)
FLATTENER_EXTRACTION_TIMEOUT=900

# Maximum input file size in megabytes
# Default: 200
FLATTENER_MAX_FILE_SIZE_MB=200

# Directory for temporary files during processing (leave empty for system temp)
# Default: (empty - uses system temp)
FLATTENER_TEMP_DIR=
